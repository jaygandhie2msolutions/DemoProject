<section class="{% unless section.settings.wide_display %}main_content_area container {% endunless %} wide_display--{{ section.settings.wide_display }}">

  {% if section.blocks.size > 0 %}
  <section  class="flexslider homepage_slider"
  data-slider-id="homepage_slider-{{section.id}}"
  data-slideshow-animation="{{section.settings.slideshow_animation}}"
  data-slideshow-speed="{{section.settings.slideshow_speed}}">
  <ul class="slides">
    {% for block in section.blocks %}
    <li  {{ block.shopify_attributes }} data-block-id="{{block.id}}">
      <a {% unless block.settings.button_label != blank %}{% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}{% endunless %}>
        {% if block.settings.image %}


  <img  alt="{{ block.settings.image.alt }}"
        src="{{ block.settings.image_xs | img_url: '' }}"
        class="lazyload lazyload--fade-in xs-slide"
        sizes="100vw"
        />


        <img  alt="{{ block.settings.image.alt }}"
        src="{{ block.settings.image | img_url: '300x' }}"
        data-src="{{ block.settings.image | img_url: '2048x' }}"
        class="lazyload lazyload--fade-in hidden-xs"
        sizes="100vw"
        srcset="  {{ block.settings.image | img_url: '2048x' }} 2048w,
        {{ block.settings.image | img_url: '1600x' }} 1600w,
        {{ block.settings.image | img_url: '1200x' }} 1200w,
        {{ block.settings.image | img_url: '1000x' }} 1000w,
        {{ block.settings.image | img_url: '800x' }} 800w,
        {{ block.settings.image | img_url: '600x' }} 600w,
        {{ block.settings.image | img_url: '400x' }} 400w"
        />
        {% else %}
        {% capture i %}{% cycle "1", "2" %}{% endcapture %}
        {{ 'lifestyle-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--slideshow' }}
        {% endif %}
      </a>
      {% if block.settings.title != blank or block.settings.subtext != blank or block.settings.button_label != blank %}
      <div class="flex-caption homepage_slider__flex-caption">
        <div class="container">
          <div class="columns {% if block.settings.text_position == 'left' %} nine offset-by-one {% elsif block.settings.text_position == 'right' %} eight offset-by-seven {% else %} ten offset-by-three {% endif %} align_{{ block.settings.text_align }}">
            {% if forloop.first == true and block.settings.title != blank %}
            <h1 class="headline">
              {{ block.settings.title  }}
            </h1>
            {% elsif block.settings.title != blank %}
            <p class="headline">
              {{ block.settings.title }}
            </p>
            {% endif %}
            {% if block.settings.subtext != blank %}
            <div class="subtitle">
              {{ block.settings.subtext }}
            </div>
            {% endif %}
            {% if block.settings.button_label != blank %}
            <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} class="subtitle shop-now">
              {{ block.settings.button_label }}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
</section>
{% endif %}

</section>

{% schema %}
{
  "name": "Slideshow",
  "class": "slideshow-section",
  "max_blocks": 12,
  "settings": [
  {
  "type": "select",
  "id": "slideshow_animation",
  "label": "Animation",
  "options": [
  {
  "value": "fade",
  "label": "Fade"
},
{
  "value": "slide",
  "label": "Slide"
}
]
},
{
  "type": "range",
  "id": "slideshow_speed",
  "label": "Change slides every",
  "min": 4,
  "max": 12,
  "step": 1,
  "default": 6,
  "unit": "sec"
},
{
  "type": "checkbox",
  "id": "wide_display",
  "label": "Wide display",
  "default": true
}
],
"blocks": [
{
  "type": "slide",
  "name": "Slide",
  "settings": [
  {
  "type": "image_picker",
  "id": "image",
  "label": "Image",
  "info": "1600 x 600px recommended"
},  
{
  "type": "image_picker",
  "id": "image_xs",
  "label": "Image For Mobile View"
},
{
  "type": "text",
  "id": "title",
  "label": "Heading"
},
{
  "type": "text",
  "id": "subtext",
  "label": "Subheading"
},
{
  "type": "select",
  "id": "text_position",
  "label": "Text position",
  "options": [
  {
  "value": "left",
  "label": "Left"
},
{
  "value": "center",
  "label": "Center"
},
{
  "value": "right",
  "label": "Right"
}
],
"default": "center"
},
{
  "type": "select",
  "id": "text_align",
  "label": "Text alignment",
  "options": [
  {
  "value": "left",
  "label": "Left"
},
{
  "value": "center",
  "label": "Center"
},
{
  "value": "right",
  "label": "Right"
}
]
},
{
  "type": "text",
  "id": "button_label",
  "label": "Button label"
},
{
  "type": "url",
  "id": "link",
  "label": "Slide link"
}
]
}
],
"presets": [{
"name": "Slideshow",
"category": "Image",
"settings": {
"slideshow_animation": "fade"
},
"blocks": [
{
  "type": "slide",
  "settings": {
  "image": "",
  "title": "Retina Shopify Theme",
  "text_position": "center",
  "text_align": "center",
  "button_label": "",
  "link": ""
}
},
{
  "type": "slide",
  "settings": {
  "image": "",
  "title": "",
  "text_position": "center",
  "text_align": "left",
  "button_label": "",
  "link": ""
}
}
]
}]
}
{% endschema %}