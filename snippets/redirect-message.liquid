{% unless settings.redirect_popup %}
<div id="location-redirect-message">
  <div id="message">
    <div class="redirect-header-div">
      {{ settings.redirect_from_message }} <span class="current-country"></span>. {{ settings.redirect_to_message }} <span class="new-store"></span>? <a class="redirect-me" href="#">{{ settings.redirect_approve }}</a> or <a class="close-redirect-btn" href="#">{{ settings.redirect_decline }}</a>
    </div>
  </div>
</div>
{% else %}
<div style="display:none">
  <div id="location-redirect-popup">
    {% if settings.redirect_popup_logo %}<div class="buttons-container"><img src="{{ 'redirect_popup_logo.jpg' | asset_url }}" /></div>{% endif %}
    <p>{{ settings.redirect_popup_from_message }} <span class="current-country"></span>. {{settings.redirect_popup_text}}</p>
    <div class="buttons-container">
      <a class="redirect-me button-yes" href="">{{ settings.redirect_popup_yes }}</a>
      <a class="close-redirect-btn button-no" href="">{{ settings.redirect_popup_no }}</a>
    </div>
  </div>
</div>
{% endunless %}
